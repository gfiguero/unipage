{% extends ':Page:base.html.twig' %}

{% use 'UniPageBundle:Page:frontpage.html.twig' %}{% block stylesheet %}{{ parent() }}{% endblock %}

{% use 'UniPageBundle:Page:footer.html.twig' %}{% block footer %}{{ parent() }}{% endblock %}

{% block header %}
    <header class="intro-header header-image">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>{{ "history_index"|trans }}</h1>
                        <hr class="small">
                        <span class="subheading">{{ frontpage.title }}</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block javascript %}{% endblock %}

{% block body -%}
    <section id="process">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="timeline">
                    {% for stage in process %}
                        {% if loop.index is odd %}
                        <li>{% else %}
                        <li class="timeline-inverted">{% endif %}
                            <a href="#" data-toggle="modal" data-target="#modal{{ stage.id }}">
                                <div class="timeline-image">
                                    <img class="img-circle img-responsive" src="{{ asset(stage.webpath) | imagine_filter('page_small') }}" alt="">
                                </div>
                                <div class="timeline-panel">
                                    <div class="timeline-heading">
                                        <h4>{{ stage.title }}</h4>
                                        <h4 class="subheading">{{ stage.name }}</h4>
                                    </div>
                                    <div class="timeline-body">
                                        <p class="text-muted">{{ stage.abstract }}</p>
                                    </div>
                                </div>
                            </a>
                            <div class="modal fade" id="modal{{ stage.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                <div class="modal-dialog modal-lg" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title" id="modalLabel{{ stage.id }}">{{ stage.title }}</h4>
                                        </div>
                                        <div class="modal-body">
                                            <div class="row">
                                                <div class="col-xs-12">
                                                    <img class="img-rounded img-responsive center-block" alt="{{ stage.name }}" src="{{ asset(stage.webpath) | imagine_filter('page_large') }}">
                                                </div>
                                                <div class="col-xs-12">
                                                    <h4>{{ stage.title }}</h4>
                                                    <h4 class="subheading">{{ stage.name }}</h4>
                                                    <p class="text-muted">{{ stage.content }}</p>
                                                </div>
                                                <div class="clearfix"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                        <li class="timeline-inverted">
                            <div class="timeline-image">
                                <h4>La historia
                                    <br>todavía
                                    <br>continúa</h4>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
{% endblock %}